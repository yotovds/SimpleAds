@{    
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await this.UserManager.GetUserAsync(this.User);

    @if (await this.UserManager.IsInRoleAsync(currentUser, GlobalConstans.StringConstants.UserRole))
    {
        <partial name="_LoggedInUserIndex" />
    }

    @if (await this.UserManager.IsInRoleAsync(currentUser, GlobalConstans.StringConstants.AdminRole))
    {
        <partial name="_LoggedInAdminIndex" />
    }

}
else
{
    <partial name="_GuestIndex" />
}